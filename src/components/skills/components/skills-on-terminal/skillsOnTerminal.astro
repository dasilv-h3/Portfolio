---
import TerminalIcon from '../../atoms/terminal-icon/TerminalIcon.astro';
import Terminal from '../terminal/Terminal.astro';
import './skills-on-terminal.css';
---

<Terminal name="dasilv-h3">
	<div class="terminal__skills">
		<h2>Mes skills</h2>
		<div class="terminal__skills__container">
			<TerminalIcon
				src="assets/html.svg"
				color="#e34f26"
				name="HTML"
			/>
			<TerminalIcon
				src="assets/css.svg"
				color="#264de4"
				name="CSS"
			/>
			<TerminalIcon
				src="assets/javascript.svg"
				color="#f7df1e"
				name="Javascript"
			/>
			<TerminalIcon
				src="assets/nodejs.svg"
				color="#3c873a"
				name="NodeJS"
			/>
			<TerminalIcon
				src="assets/react.svg"
				color="#1c84bc"
				name="React"
			/>
			<TerminalIcon
				src="assets/tailwind.svg"
				color="#2fb0f6"
				name="Tailwind"
			/>
			<TerminalIcon
				src="assets/python.svg"
				color="#4584b6"
				name="Python"
			/>
			<TerminalIcon
				src="assets/django.svg"
				color="#105239"
				name="Django"
			/>
		</div>
	</div>
</Terminal>
